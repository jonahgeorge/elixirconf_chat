      <p class="mb-6">
        Check your email for a login code and enter / paste it below.
      </p>
      <%= text_input f, :login_code_confirmation,
            required: true,
            placeholder: "login code",
            class: "h-12 w-72 items-center space-x-3 rounded-lg bg-white px-4 text-left shadow-sm ring-1 ring-stone-900/10 placeholder:text-stone-400 hover:ring-stone-300 focus:outline-none focus:ring-2 focus:ring-sky-500"
          %>
        </div>

      <% "confirm_password" -> %>
        <div class="block my-3">
          <p class="mb-3">Enter your password.</p>
          <%= password_input f, :password,
            required: true,
            placeholder: "password",
            class: "inline-block h-12 w-72 rounded-lg bg-stone-900 px-6 font-semibold text-white hover:bg-stone-700 focus:outline-none focus:ring-2 focus:ring-stone-400 focus:ring-offset-2 focus:ring-offset-stone-50"
          %>
        </div>
    <% end %>

    <%= if @errors do %>
      <div class="block my-3 text-red-500">
        <%= for {field, {message, _}} <- @errors do %>
          <p><%= field %>: <%= message %></p>
        <% end %>
      </div>
    <% end %>
    <div class="my-3 block">
      <%= submit "login", [class: "inline-block h-12 w-72 rounded-lg bg-stone-900 px-6 font-semibold text-white hover:bg-stone-700 focus:outline-none focus:ring-2 focus:ring-stone-400 focus:ring-offset-2 focus:ring-offset-stone-50"] %>
    </div>
  </.form>
